<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.screens.SecondLandingFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_splash_screen_bg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/find_them"
        style="@style/SplashH1Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/find_them"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/SplashH1Text.Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forever_home"
        app:layout_constraintLeft_toLeftOf="@id/find_them"
        app:layout_constraintTop_toBottomOf="@id/find_them" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_url="https://assets5.lottiefiles.com/private_files/lf30_xd1zUR.json" />
</androidx.constraintlayout.widget.ConstraintLayout>