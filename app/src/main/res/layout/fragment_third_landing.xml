<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".splash.screens.ThirdLandingFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_splash_screen_bg3"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/finding_them"
        style="@style/SplashH1Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/or_help_us"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/SplashH1Text.Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finding_them"
        app:layout_constraintLeft_toLeftOf="@id/finding_them"
        app:layout_constraintTop_toBottomOf="@id/finding_them" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_url="    https://assets9.lottiefiles.com/temp/lf20_EVDaJ0.json"/>

</androidx.constraintlayout.widget.ConstraintLayout>